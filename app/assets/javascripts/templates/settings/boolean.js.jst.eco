<div class='form-group has-feedback'>
  <div class='controls'>
    <label for='<%= @id %>'><%= @label %>
      <input type='checkbox'
             id='<%= @id %>'
             <%= 'checked' if @value %>
             data-name='<%= @setting %>'
             class='form-check-input'>
      </input>
    </label>
  </div>
</div>
