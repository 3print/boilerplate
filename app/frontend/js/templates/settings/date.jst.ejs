<div class='form-group has-feedback'>
  <label for='<%= locals.id %>'><%= locals.label %></label>

  <div class='controls'>
    <div class='input-group'>
      <label class='input-group-text' for='<%= locals.id %>'>
        <svg class="feather feather-calendar" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
      </label>
      <input type='date'
             id='<%= locals.id %>'
             value='<%= locals.value || locals.settingParameters.default || "" %>'
             data-name='<%= locals.setting %>'
             <% if(locals.settingParameters.required) { %>required<% } %>
             class='form-control datepicker'>
      </input>
    </div>
  </div>
</div>
