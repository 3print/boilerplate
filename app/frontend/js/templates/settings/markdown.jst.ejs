<div class='form-group has-feedback markdown'>
  <label for='<%= locals.id %>'><%= locals.label %></label>

  <div class="toolbar mb-2">
    <div class="btn-group me-2">
      <button name="button" type="submit" class="btn btn btn-outline-secondary btn-sm btn-icon" data-wrap="**|**" data-keystroke="ctrl-b">
        <svg class="feather feather-bold" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 4h8a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"></path><path d="M6 12h9a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"></path></svg>
      </button>
      <button name="button" type="submit" class="btn btn btn-outline-secondary btn-sm btn-icon" data-wrap="*|*" data-keystroke="ctrl-i">
        <svg class="feather feather-italic" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="4" x2="10" y2="4"></line><line x1="14" y1="20" x2="5" y2="20"></line><line x1="15" y1="4" x2="9" y2="20"></line></svg>
      </button>
      <button name="button" type="submit" class="btn btn btn-outline-secondary btn-sm btn-icon" data-wrap="__|__" data-keystroke="ctrl-u">
        <svg class="feather feather-underline" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 3v7a6 6 0 0 0 6 6 6 6 0 0 0 6-6V3"></path><line x1="4" y1="21" x2="20" y2="21"></line></svg>
      </button>
    </div>
    <div class="btn-group me-2">
      <button name="button" type="submit" class="btn btn btn-outline-secondary btn-sm btn-icon" data-wrap="[|]($url &quot;$title&quot;)" data-keystroke="ctrl-a">
        <svg class="feather feather-link" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
      </button>
      <button name="button" type="submit" class="btn btn btn-outline-secondary btn-sm btn-icon" data-wrap="![|]($url)" data-keystroke="ctrl-shift-i"><svg class="feather feather-image" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><circle cx="8.5" cy="8.5" r="1.5"></circle><polyline points="21 15 16 10 5 21"></polyline></svg>
      </button>
    </div>
  </div>

  <textarea id='<%= locals.id %>'
            data-name='<%= locals.setting %>'
            data-iconlibrary='fa'
            data-editor='markdown'
            data-language='fr'
            data-resize='vertical'
            <% if(locals.settingParameters.required) { %>required<% } %>
            class='form-control'><%= locals.value || locals.settingParameters.default || "" %></textarea>
</div>
