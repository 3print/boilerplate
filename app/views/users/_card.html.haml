= show_avatar user.avatar, :thumb

- if can? :edit, user
  = link_to user.name, [controller.controller_namespace, user].flatten
- else
  = user.name

= "(#{user.email})"
- unless user.user?
  .details
    - if user.role == 'admin'
      .badge.bg-warning= "enums.user.role.#{user.role}".t
    - else
      .badge.bg-info= "enums.user.role.#{user.role}".t
