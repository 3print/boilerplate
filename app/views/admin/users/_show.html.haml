
.row
  .col-md-4.col-xs-4
    = show_avatar resource.avatar, :medium

  .col-md-8.col-xs-8
    .panel.panel-default
      .panel-heading
        - if resource.admin?
          .pull-right.label.label-warning= "enums.user.role.#{resource.role}".t
        - else
          .pull-right.label.label-info= "enums.user.role.#{resource.role}".t

        %h5.panel-title
          = icon :info
          Informations

      %ul.list-group
        %li.list-group-item
          %strong
            = icon_for(:email)
            Email :

          = resource.email
