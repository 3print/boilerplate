- toggle_pill resource, :approve, off: :revocate do |on|
  - if on
    = icon('x')
    %span.text= 'admin.actions.revocate'.t
  - else
    = icon(:check)
    %span.text= 'admin.actions.approve'.t

- toggle_pill resource, :validate, off: :invalidate do |on|
  - if on
    = icon('x')
    %span.text= 'admin.actions.invalidate'.t
  - else
    = icon(:check)
    %span.text= 'admin.actions.validate'.t
