
.row.sign-in
  .col-md-6
    = simple_form_for(sign_in_model, url: session_path(:user), html: { role: 'form'}) do |f|
      %h3= 'actions.sign_in'.t
      = f.input :email, :autofocus => true
      = f.input :password
      = f.input :remember_me, as: :boolean

      = f.submit 'actions.connect'.t, class: 'btn btn-red btn-block'

  .col-md-6
    = simple_form_for(sign_up_model, url: registration_path(resource_name), html: { role: 'form'}) do |f|
      %h3= 'actions.sign_up'.t

      = f.input :first_name
      = f.input :last_name
      = f.input :email
      = f.input :password
      = f.input :password_confirmation

      = f.submit 'actions.sign_up'.t, class: 'btn btn-grey btn-block'
