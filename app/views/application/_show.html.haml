- columns = default_columns_for_object(resource)

= widget_box 'labels.informations'.t, :info, content_class: 'nopadding' do
  = render_partial_for_user 'show_before_fields'
  %ul.list-group.list-group-flush
    - columns.each do |col|
      - if can? :view, resource, col
        %li.list-group-item= show_field(col)

    = render_partial_for_user 'show_extra_fields'

  = render_partial_for_user 'show_after_fields'
