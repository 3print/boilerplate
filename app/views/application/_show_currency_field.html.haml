= render partial: 'show_field_label', locals: local_assigns
- if controller.resource_class.respond_to?(column.to_s.pluralize)
  - if value.present?
    = "enums.#{resource.class.table_name.singularize}.#{column}.#{value}".t
  - else
    = 'errors.value.undefined'.t
- else
  = number_to_currency value
